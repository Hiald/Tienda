        function fn_rtCategoriaSV() {
            var fnRoute = gRoute + "index/producto";

            var selectBox = document.getElementById("slcCategoria");
            var selectedValue = selectBox.options[selectBox.selectedIndex].value;

            var idcategoria = selectedValue;
            var form = '<input type="hidden" name="' + "categoriaid" + '" value="' + idcategoria + '">';
            $('<form action="' + fnRoute + '" method="POST">' + form + '</form>').appendTo($(document.body)).submit();
        }

        function fn_rtCategoria(fp_categoriaid) {
            var fnRoute = gRoute + "index/producto";

            var idcategoria = fp_categoriaid;
            var form = '<input type="hidden" name="' + "categoriaid" + '" value="' + idcategoria + '">';
            $('<form action="' + fnRoute + '" method="POST">' + form + '</form>').appendTo($(document.body)).submit();
        }

        function fn_rtDetalle(fp_itipoPromocion, fp_icategoriaID) {
            var fnRoute = gRoute + "index/detalle";

            var itipoPromocion = fp_itipoPromocion;
            var icategoriaID = fp_icategoriaID;
            var form = '<input type="hidden" name="' + "wtipoPromocion" + '" value="' + itipoPromocion + '">'
            + '<input type="hidden" name="' + "wproductoid" + '" value="' + icategoriaID + '">';
            $('<form action="' + fnRoute + '" method="POST">' + form + '</form>').appendTo($(document.body)).submit();
        }

        // -------------------------------------- //

        function fn_AgregarCarroCatalogo(productoId) {

            $('#modalAddCart').modal({
                backdrop: 'static',
                keyboard: false,
                show: true
            });

            var slcCantidad = 1;
            $('#hddCarrito_' + productoId).attr('data-icantidad', slcCantidad);

            var dproductoid = parseInt($('#hddCarrito_' + productoId).attr('data-productoid'));
            var dvendedorid = parseInt($('#hddCarrito_' + productoId).attr('data-ivendedor'));
            var dnombre = $('#hddCarrito_' + productoId).attr('data-snombre');
            var dimagen = $('#hddCarrito_' + productoId).attr('data-simagen');
            var dcantidad = parseInt($('#hddCarrito_' + productoId).attr('data-icantidad'));
            var dprecio = $('#hddCarrito_' + productoId).attr('data-dprecio');

            //cambio de decimal a entero
            dprecio = dprecio * 100;

            var multiplicacionPC = dcantidad * dprecio;
            let productoCarrito = JSON.parse(localStorage.getItem('ss_productosCarrito')) || [];

            const existeProductoId = productoCarrito.find(({ ctProductoId }) => ctProductoId === dproductoid);
            if (existeProductoId) {
                Object.assign(existeProductoId, {
                    'ctProductoId': dproductoid,
                    'ctVendedorId': dvendedorid,
                    'ctNombre': dnombre,
                    'ctImagen': dimagen,
                    'ctCantidad': existeProductoId.ctCantidad + dcantidad,
                    'ctPrecio': existeProductoId.ctPrecio + multiplicacionPC,
                    'ctPrecioInicial': dprecio
                });
            } else {
                const nuevoItem = {
                    'ctProductoId': dproductoid,
                    'ctVendedorId': dvendedorid,
                    'ctNombre': dnombre,
                    'ctImagen': dimagen,
                    'ctCantidad': dcantidad,
                    'ctPrecio': dprecio * dcantidad,
                    'ctPrecioInicial': dprecio
                };
                productoCarrito.push(nuevoItem);
            }

            localStorage.setItem('ss_productosCarrito', JSON.stringify(productoCarrito));

            fn_GenerarMonto();
            fn_GenerarCarritoHTML();

            setTimeout(function () {
                $('#modalAddCart').modal("hide");
                $('#cart-toast').toast("show");
            }, 1000);

        }

        function fn_AgregarCarro() {

            $('#modalAddCart').modal({
                backdrop: 'static',
                keyboard: false,
                show: true
            });

            var slcCantidad = $('#slcCantidad option:selected').attr('value');
            $('#hddCarrito').attr('data-icantidad', slcCantidad);

            var dproductoid = parseInt($('#hddCarrito').attr('data-productoid'));
            var dvendedorid = parseInt($('#hddCarrito').attr('data-ivendedor'));
            var dnombre = $('#hddCarrito').attr('data-snombre');
            var dimagen = $('#hddCarrito').attr('data-simagen');
            var dcantidad = parseInt($('#hddCarrito').attr('data-icantidad'));
            var dprecio = $('#hddCarrito').attr('data-dprecio');

            //generar monto en entero
            dprecio = dprecio * 100;

            var multiplicacionPC = dcantidad * dprecio;
            let productoCarrito = JSON.parse(localStorage.getItem('ss_productosCarrito')) || [];

            const existeProductoId = productoCarrito.find(({ ctProductoId }) => ctProductoId === dproductoid);
            if (existeProductoId) {
                Object.assign(existeProductoId, {
                    'ctProductoId': dproductoid,
                    'ctVendedorId': dvendedorid,
                    'ctNombre': dnombre,
                    'ctImagen': dimagen,
                    'ctCantidad': existeProductoId.ctCantidad + dcantidad,
                    'ctPrecio': existeProductoId.ctPrecio + multiplicacionPC,
                    'ctPrecioInicial': dprecio
                });
            } else {
                const nuevoItem = {
                    'ctProductoId': dproductoid,
                    'ctVendedorId': dvendedorid,
                    'ctNombre': dnombre,
                    'ctImagen': dimagen,
                    'ctCantidad': dcantidad,
                    'ctPrecio': dprecio * dcantidad,
                    'ctPrecioInicial': dprecio
                };
                productoCarrito.push(nuevoItem);
            }

            localStorage.setItem('ss_productosCarrito', JSON.stringify(productoCarrito));

            fn_GenerarMonto();
            fn_GenerarCarritoHTML();

            setTimeout(function () {
                $('#modalAddCart').modal("hide");
                $('#cart-toast').toast("show");
            }, 1000);
        }

        function fn_GenerarMonto() {
            var sumatotal = 0;

            let productoCarrito = JSON.parse(localStorage.getItem('ss_productosCarrito')) || [];

            if (productoCarrito.length === 0) {
                $('#ctotal').html("<small>Mi carrito</small> S/. 0.00");
                $('#ccantidad').html("0");
                $('#cgeneralTotal').html("S/. 0.00");
            } else {
                $.each(productoCarrito, function (index, value) {
                    sumatotal = sumatotal + value.ctPrecio;
                });
                $('#cgeneralTotal').html("S/. 0.00");
                $('#ctotal').html("");
                $('#ctotal').html("<small>Mi carrito</small> S/. " + (sumatotal / 100).toFixed(2));
                $('#ccantidad').html("");
                $('#ccantidad').html(JSON.parse(localStorage.getItem('ss_productosCarrito')).length);
                $('#cgeneralTotal').html("S/. " + (sumatotal / 100).toFixed(2));
            }
        }

        function fn_GenerarCarritoHTML() {
            $('#body-producto').html("");

            let productoCarrito = JSON.parse(localStorage.getItem('ss_productosCarrito')) || [];

            if (productoCarrito.length === 0) {
                $('#body-producto').css('height', '0px');
            } else {
                $('#body-producto').css('height', '0px');
                $.each(productoCarrito, function (index, value) {

                    var heightActual = $('#body-producto').height();
                    if (heightActual == 0) {
                        $('#body-producto').css('height', '80px');
                    }

                    if (heightActual < 400) {
                        $('#body-producto').css('height', (heightActual + 80) + 'px');
                    }

                    if (index == 0) {
                        $('#body-producto').html(
                            '<div class="widget-cart-item py-2 border-bottom" style="overflow-x:hidden">' +
