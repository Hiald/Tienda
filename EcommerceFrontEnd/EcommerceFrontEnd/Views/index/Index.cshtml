                                               data-productoid="@item.productoid"
                                               data-snombre="@item.snombre"
                                               data-simagen="@item.simagen1"
                                               data-ivendedor="@item.vendedorid"
                                               data-icantidad=""
                                               data-dprecio="@item.dpreciopromocion" />
